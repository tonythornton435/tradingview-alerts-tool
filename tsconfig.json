{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,

    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ]
}

{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ES2020",
    "declaration": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ]
}
